<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="720.0" minWidth="600.0" prefHeight="720.0" prefWidth="600.0" style="-fx-background-color: f0f0f0f0;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eu.blappole.ui.controllers.Controller">
    <children>
        <VBox alignment="CENTER" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
           <children>
               <HBox VBox.vgrow="ALWAYS">
                   <padding>
                       <Insets top="10.0" />
                   </padding>
                  <children>
                  <Label text="Koch Level">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="cbbKochLevels" />
                  </children>
               </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button onAction="#loadKoch" text="Load" />
               </children>
            </HBox>
           </children>
        </VBox>
      <Canvas fx:id="kochCanvas" height="580.0" width="580.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" />
    </children>
</AnchorPane>
